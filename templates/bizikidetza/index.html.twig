{% extends 'base.html.twig' %}

{% block title %}Bizikidetza index{% endblock %}

{% block body %}
    
    
    <main role="main" class="container">
        
        <div class="card">
        
        <div class="card-body">
            <h5 class="card-title">"{{ "Bizikidetza" |trans}}" {{ "aukerak" |trans}}</h5>
    
            {% for bizikidetza in bizikidetzas  %}
            <div class="row maila0">
                <div class="col">
                    <span class="label label-default">{{ bizikidetza.bizikidetzaEu }}</span>
                </div>
                <div class="col">
                    <span class="label label-default">{{ bizikidetza.bizikidetzaEs }}</span>
                </div>
                <div class="col-1">
                    <span class="label label-default">
                    <a href="{{ path('bizikidetza_edit', {'id': bizikidetza.id}) }}">{{ "Edit" |trans}}</a>
                    </span>
                </div>
            </div>
            {% else %}
                <span class="label label-default">
                    <td colspan="7">no records found</td>
                </span>
            {% endfor %}
            
            <div class="row">
                <div class="col">
                    <a href="{{ path('bizikidetza_new') }}">{{ "berria" |trans}}</a>
                </div>
            </div>
        </div
    </main>
    
    
    
{% endblock %}
