{% extends 'base.html.twig' %}

{% block title %}Genero index{% endblock %}

{% block body %}
  
    
    <main role="main" class="container">
        
        <div class="card">
        
        <div class="card-body">
            <h5 class="card-title">"{{ "Genero" |trans}}" {{ "aukerak" |trans}}</h5>
    
            {% for genero in generos  %}
            <div class="row maila0">
                <div class="col">
                    <span class="label label-default">{{ genero.generoEu }}</span>
                </div>
                <div class="col">
                    <span class="label label-default">{{ genero.generoEs }}</span>
                </div>
                <div class="col-1">
                    <span class="label label-default">
                    <a href="{{ path('genero_edit', {'id': genero.id}) }}">{{ "Edit" |trans}}</a>
                    </span>
                </div>
            </div>
            {% else %}
                <span class="label label-default">
                    <td colspan="7">no records found</td>
                </span>
            {% endfor %}
            
            <div class="row">
                <div class="col">
                    <a href="{{ path('genero_new') }}">{{ "berria" |trans}}</a>
                </div>
            </div>
        </div
    </main>
    
    
    
    
    
{% endblock %}
